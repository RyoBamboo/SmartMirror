<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.takenoshita.smartmirror">

    <uses-permission android:name="android.permission.CAMERA"/> <!-- カメラへの接続を許可する -->

    <application
        android:name=".presenters.SmartMirrorApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- <activity android:name=".MainActivity"> -->
        <activity android:name=".presenters.activities.CameraActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>